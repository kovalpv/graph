{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-rational-order",
        "stylelint-prettier/recommended"
    ],
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
        "indentation": [
            2,
            {
                "except": [
                    "block"
                ],
                "message": "Please use 2 spaces for indentation.",
                "severity": "warning"
            }
        ]
    }
}
